{% extends 'layout.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
 <h1>Article index - ADMIN</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.image }}</td>

                
                <a href="{{ path('article_crud_show', {'id': article.id}) }}">show</a>
                <a href="{{ path('article_crud_edit', {'id': article.id}) }}">edit</a>
                {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}



